{
  "name": "berty-electron-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.42",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.67.1",
    "react-native-web": "^0.17.5",
    "react-scripts": "^4.0.3",
    "ts-loader": "^8.2.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "start": "concurrently \"npm:start:renderer\" \"npm:build:main\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electronmon .\"",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "start:renderer": "cross-env BROWSER=none craco start",
    "build:main": "npx tsc --project tsconfig.main.json --watch",
    "dist:win": "craco build && npx tsc --project tsconfig.main.json && electron-builder -w -c.extraMetadata.main=build/main.js",
    "dist:mac": "craco build && npx tsc --project tsconfig.main.json && electron-builder -m -c.extraMetadata.main=build/main.js",
    "dist:linux": "craco build && npx tsc --project tsconfig.main.json && electron-builder -l -c.extraMetadata.main=build/main.js",
    "fix:electron": "npx electron-fix start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": ".",
  "main": "./build/main.js",
  "engines": {
    "node": ">=14"
  },
  "build": {
    "appId": "tech.berty.electron",
    "productName": "Berty",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "category": "utilities",
      "type": "development"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/logo512.png"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "electron": "^13.6.7",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-fix": "^1.1.3",
    "electronmon": "^2.0.2",
    "wait-on": "^6.0.0"
  }
}
